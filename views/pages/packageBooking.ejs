<!-- model -->
<div class="modal fade" id="elegantModalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
  <!--Content-->
  <div class="modal-content form-elegant">
    <!--Header-->
    <div class="modal-header text-center">
      <h3 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="myModalLabel"><strong><%= package.name%></strong></h3>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <!--Body-->
    <div class="modal-body mx-4">
      <!--Body-->
      <form action="/vanrai-admin/bookings" method="post" id="bookingform"  role="form"
      data-toggle="validator"
      id="serviceUpdateForm">
    

      <input type="text" id="package_name"  name="package_name" value="<%= package.name%>" hidden>   
      <input type="text" id="package_id"  name="package_id" value="<%= package.package_id%>" hidden>    
      <input type="text" id="price"  name="price" value="<%= package.price %>" hidden>    

      <div class="form-group mb-2">
        <label data-success="right" for="name">Full Name</label>
        <input type="text" id="name" name="name" class="form-control" data-error="you must provide name" required>   
          <!-- Error -->
          <div class="help-block with-errors text-danger"></div>
      </div>
      <div class="form-group mb-2">
        <label  data-success="right" for="name">Email-Id</label>
        <input type="email" id="email" name="email" class="form-control" data-error="you must provide email" required>   
          <!-- Error -->
          <div class="help-block with-errors text-danger"></div>
      </div>
      <div class="form-group mb-2">
        <label  data-success="right" for="name">Phone No</label>
        <input type="number" id="phone" name="phone" class="form-control"  data-error="you must phone-number" required>   
          <!-- Error -->
          <div class="help-block with-errors text-danger"></div>
      </div>
      <div class="form-group mb-2">
        <label  data-success="right" for="numOfPeople">How many peoples?</label>
        <input type="number" id="people" name="people" class="form-control"  data-error="Minimum 1 person." required>  <!-- Error -->
        <div class="help-block with-errors text-danger"></div>
      </div>
      
      <label >Select Date</label>
      <div id="datepicker" class=" form-group  input-group date" data-date-format="mm-dd-yyyy">
        

        <input class="form-control" name="date" type="text"  />
        <span class="input-group-addon"
          ><i class="glyphicon glyphicon-calendar"></i
        ></span>
      </div>
      <!-- <div class="text-center mb-3">
        <button type="button" class="btn btn-solid-lg btn-block btn-rounded z-depth-1a">Check avability</button>
      </div> -->
    
      <div class="text-center mb-3">
        <button type="submit" class="btn btn-solid-lg btn-block btn-rounded z-depth-1a">Book</button>
      </div>
    </form>
     
    </div>
    <!--Footer-->
    <div class="modal-footer mx-5 pt-3 mb-1">
      <p class="font-small grey-text d-flex justify-content-center">You will receive a call if your booking is confiremed </p>
    </div>
  </div>
  <!--/.Content-->
</div>
</div>


