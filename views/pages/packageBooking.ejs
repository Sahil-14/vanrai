    <div class="row">
      <div class="col-lg-4 col-xl-6">
        <div class="image-container">
          <img class="img-fluid" src="/api/packages/image/<%= package.package_id%>" alt="alternative" />
        </div>
        <!-- end of image-container -->
      </div>
      <!-- end of col -->
      <div class="col-lg-8 col-xl-6">
        <div class="text-container">
          <h2 class="text-capitalise" style="letter-spacing: 1px;"><%= package.name%></h2>
          <p class="pkg-text-highlight">Location : <%= package.location%></p>
          <p>
            <%= package.description%>
          </p>
          <p class="pkg-text-highlight">Package Highlights</p>
          <ul class="list-unstyled li-space-lg">
            <li class="media">
              <i class="fas fa-square"></i>
              <div class="media-body">
                <%= package.duration%>
              </div>
            </li>
            <% if(package.packageHighlights.length > 0){ %>
              <% package.packageHighlights.forEach((highlight,index) => { %>
            <li class="media">
              <i class="fas fa-square"></i>
              <div class="media-body">
                <%= highlight.name %>
              </div>
            </li>
            <% }) %>
            <% } %>
          </ul>
          <p class="pkg-text-highlight">Booking Dates</p>
          <ul class="list-unstyled li-space-lg">
            <li class="media">
              <i class="fas fa-square"></i>
              <div class="media-body">
                Starting Date : <% if(package.start_date != null){%>
                  <%= moment(package.start_date).format( 'MMM-DD-YYYY') %>
                <% }else{%>
                  -
                <% }%>
              </div>
            </li>
            <li class="media">
              <i class="fas fa-square"></i>
              <div class="media-body">
                Ending Date : <% if(package.end_date != null){%>
                  <%= moment(package.end_date).format( 'MMM-DD-YYYY') %>
                <% }else{%>
                  -
                <% }%>
              </div>
            </li>
           
          </ul>
          
          <div >
            <h3 class="text-capitalise" style="letter-spacing: 1px;">Price : â‚¹<%= package.price%></h2>
          </div>
