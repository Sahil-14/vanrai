<%- include('../partials/header')%>

  <!-- Header -->
  <header class="header-2">
    <div class="header-content2">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="text-container-2">
              <h1 class="">SERVICES</h1>
            </div>
          </div>
          <!-- end of col -->
        </div>
        <!-- end of row -->
      </div>
      <!-- end of container -->
    </div>
    <!-- end of header-content -->
  </header>

<!-- error   -->
<% if(error != null){%>
  <div class="col-lg-12 heading-section text-center  p-5">
    <h2 class="section-title m-5">Error <i class="fas fa-exclamation-triangle"></i></h2>
    <p class="text-danger">
     <%= error %>
    </p>
  </div>
  <% } else { %>
  <!-- About -->
  <div class="counter">
    <div class="container">
      <div class="row">

        <% if(services.length > 0){ %>
          <% services.forEach((service,index) => { %>
            <div class="col-lg-5 col-xl-6 ">
              <div class="image-container">
               <img class="img-fluid" src="/api/services/image/<%= service.service_id%>" alt="alternative" />
                
                 <!-- <img class="img-fluid" src="data:image/png;base64" alt="alternative" /> -->
                </div>
              <!-- end of image-container -->
            </div>
            <div class="col-lg-7 col-xl-6 pb-5">
              <div class="text-container">
                <h2><%= service.name%></h2>
                <p>
                  <%= service.description %>
                </p>
                <ul class="list-unstyled li-space-lg">
                  <% if(service.highlights.length > 0){ %>
                    <% service.highlights.forEach((highlight,index) => { %>
                  <li class="media">
                    <i class="fas fa-square"></i>
                    <div class="media-body">
                     <%= highlight.name %>
                    </div>
                  </li>
                  <% }) %>
                  <% } %>
                </ul>
    
                <!-- Counter -->
                <div>
                  <h4 class="price">Starting at <span>â‚¹ <%= service.price %></span></h4>
                </div>
                <!-- end of counter -->
              </div>
              <!-- end of text-container -->
            </div>
          <% }) %>
          <% } %>
 
      </div>
      <!-- end of row -->
    </div>
    <!-- end of container -->
  </div>
<% } %>
   
<%- include('../partials/footer')%>


<script src="/js/jquery.min.js"></script>
<!-- jQuery for Bootstrap's JavaScript plugins -->
<script src="/js/popper.min.js"></script>
<!-- Popper tooltip library for Bootstrap -->
<script src="/js/bootstrap.min.js"></script>
<!-- Bootstrap framework -->
<script src="/js/jquery.easing.min.js"></script>
<!-- jQuery Easing for smooth scrolling between anchors -->
<script src="/js/swiper.min.js"></script>

<script src="/js/scripts.js"></script>
</body>
</html>