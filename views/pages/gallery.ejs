<%- include('../partials/header')%>
  <!-- Header -->
  <header class="header-2">
    <div class="header-content2">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="text-container-2">
              <h1 class="">Image Gallery</h1>
            </div>
          </div>
          <!-- end of col -->
        </div>
        <!-- end of row -->
      </div>
      <!-- end of container -->
    </div>
    <!-- end of header-content -->
  </header>

  <div id="section-contact" class="section-area gallery-area section-gray">
    <div class="container">
      <div class="button-group text-left mb-3 mb-3">
      <button type="button" class="gallery-btn gallery-active" data-filter="" id="btn-1">All</button>

      <%if(packages.length > 0){ %>
        <% packages.forEach((package,index) => { %>
            
            <button type="button" class="ml-2 mt-3 gallery-btn" data-filter=".<%= package.name.toUpperCase().replace(/ /g,'')%>"><%= package.name%></button>
      
        <% }) %>
      <% } %>
    </div>
      <div class="row grid " >
        <% if(Images.length == 0){ %>
      
        <% }else{ %>
          <% Images.forEach((image) => { %>
            <div class="col-lg-4 col-md-12 mb-4 mb-lg-0 <%= image.package_name?.toUpperCase().replace(/ /g,'')%>">
              <a class="test-popup-link" href="/api/gallery/image/<%= image.id%>">
              <img
              height="200"
                src="/api/gallery/image/<%= image.id%>"
                class="w-100 shadow-1-strong rounded mb-4"
                alt="Boat on Calm Water"
              />
            </a>
            </div>
          <% }) %>
        <% } %>
       
      
      
    
        </div>
      </div>
      <!-- Gallery -->
      
    </div>
  </div>
<%- include('../partials/footer')%>
 <!-- Scripts -->
 <script src="js/jquery.min.js"></script>

 <!-- jQuery for Bootstrap's JavaScript plugins -->
 <script src="js/popper.min.js"></script>
 <!-- Popper tooltip library for Bootstrap -->
 <script src="js/bootstrap.min.js"></script>
 <!-- Bootstrap framework -->
 <script src="js/jquery.easing.min.js"></script>
 <!-- jQuery Easing for smooth scrolling between anchors -->
 <script src="js/swiper.min.js"></script>

 <script src="js/validator.min.js"></script>
 <script src="js/jquery.magnific-popup.min.js"></script>
 <!-- Validator.js - Bootstrap plugin that validates forms -->
 <script src="js/scripts.js"></script>
 <script src="js/isotope.min.js"></script>
 <script>

let $btns = $('.gallery-area .button-group button');


$btns.click(function (e) {

    $('.gallery-area .button-group button').removeClass('active'); // removing active from all
    e.target.classList.add('active');  // adding active to selected button

    let selector = $(e.target).attr('data-filter');  // getting data-filter of selected button
    $('.gallery-area .grid').isotope({
        filter: selector
    });

    return false;
})

  

 </script>
</body>
</html>