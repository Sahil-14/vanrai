<%- include('../../partials/adminPartials/adminHeader')%>
<div class="main-panel">
  
  <div class="content-wrapper">
    <div class="row">
      <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between flex-wrap">
          <div class="d-flex align-items-end flex-wrap">
            <div class="mr-md-3 mr-xl-5">
              <h2>Welcome back,</h2>
              <p class="mb-md-0">Your packages dashboard.</p>
            </div>
            <div class="d-flex">
              <i class="mdi mdi-home text-muted hover-cursor"></i>
              <p class="text-muted mb-0 hover-cursor">
                &nbsp;/&nbsp;Dashboard&nbsp;/&nbsp;
              </p>
              <p class="text-primary mb-0 hover-cursor">Packages</p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12 grid-margin">
        <div class="text-center">
          <a class="btn btn-primary" href="/vanrai-admin/createPackage">Add New Package</a>
        </div>
        <% if(successMessage != null){ %>
          <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <strong class="text-center"><%= successMessage%></strong> 
            <a type="button" class="close"  aria-label="Close" href="/vanrai-admin/packages">
              <span aria-hidden="true">&times;</span>
            </a>
          </div>
        <% }%>
        
        <% if(errorMessage != null){ %>
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
          <strong class="text-center"><%= errorMessage %></strong> 
          <a type="button" class="close"  aria-label="Close" href="/vanrai-admin/packages">
            <span aria-hidden="true" >&times;</span>
          </a>
        </div>
        <% }%>
      </div>
      <% if(error != null){%>
        <div class="col-lg-12 heading-section text-center  p-5">
          <h2 class="section-title m-5">Error <i class="fas fa-exclamation-triangle"></i></h2>
          <p class="text-danger">
           <%= error %>
          </p>
        </div>
        <% } else { %>

          <% if(packages?.length == 0){ %>
            <div class=" text-center alert alert-info alert-dismissible fade show mt-3" role="alert">
              <strong class="text-center">Packages not present .Please add package</strong> 
              <a type="button" class="close"  data-dismiss="alert"  aria-label="Close" >
                <span aria-hidden="true">&times;</span>
              </a>
            </div>
          <% }else{ %>
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Services</h4>
      
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Image</th>
                          <th>Package name</th>
      
                          <th>Location</th>
                          <th>Duration</th>
                          <th>Price</th>
                          <th class="text-center">Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(packages.length > 0){ %>
                          <% packages.forEach((package,index) => { %>
                        <tr>
                          <td class="py-1">
                            <img src="/api/packages/image/<%= package?.package_id%>" alt="image" />
                          </td>
                          <td><%= package?.name%></td>
                          <td><%= package?.location.substring(0,15)%></td>
                          <td><%= package?.duration.substring(0,15)%></td>
                          <td>$ <%= package?.price %></td>
      
                          <td class="text-center">
                          
                            <a class="btn btn-info" href="/vanrai-admin/updatePackage/<%= package?.package_id%>">Update</a>
                            <a class="btn btn-danger" href="/vanrai-admin/deletePackage/<%= package?.package_id%>">Delete</a>
                          </td>
                        </tr>
                        <% }) %>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
          
        <% } %>
     
    </div>
  </div>
  <!-- content-wrapper ends -->
  <!-- partial:partials/_footer.html -->
  <%- include('../../partials/adminPartials/adminFooter')%>
  <!-- partial -->
</div>

</div>
<!-- main-panel ends -->
</div>
<!-- page-body-wrapper ends -->
</div>
<!-- plugins:js -->
<script src="../vendors/base/vendor.bundle.base.js"></script>
<!-- endinject -->
<!-- Plugin js for this page-->

<script src="../vendors/datatables.net/jquery.dataTables.js"></script>
<script src="../vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
<!-- End plugin js for this page-->
<!-- inject:js -->
<script src="../js/admin/off-canvas.js"></script>
<script src="../js/admin/hoverable-collapse.js"></script>
<script src="../js/admin/template.js"></script>
<!-- endinject -->
<!-- Custom js for this page-->
<script src="../js/admin/dashboard.js"></script>
<script src="../js/admin/data-table.js"></script>
<script src="../js/admin/jquery.dataTables.js"></script>
<script src="../js/admin/dataTables.bootstrap4.js"></script>
<!-- End custom js for this page-->
<script src="../js/admin/jquery.cookie.js" type="text/javascript"></script>
</body>
</html>
