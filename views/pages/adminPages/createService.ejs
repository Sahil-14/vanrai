<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between flex-wrap">
          <div class="d-flex align-items-end flex-wrap">
            <div class="mr-md-3 mr-xl-5">
              <h2>Welcome back,</h2>
      
            </div>
            <div class="d-flex">
              <i class="mdi mdi-home text-muted hover-cursor"></i>
              <p class="text-muted mb-0 hover-cursor">
                &nbsp;/&nbsp;Dashboard&nbsp;/&nbsp;
              </p>
              <p class="text-primary mb-0 hover-cursor">
                Services / create
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 grid-margin">
        <div class="card mx-5">
          <div class="card-body">
            <h4 class="card-title">Create New Service</h4>
            <form
              class="forms-sample"
              role="form"
              data-toggle="validator"
              id="serviceCreateForm"
              method="post",
              action="/vanrai-admin/createService"
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label for="serviceName">Service Name</label>
                <input
                  type="text"
                  name="name"
                  class="form-control"
                  id="serviceName"
                  data-error="You must provide service name."
                  placeholder="Service Name"
                  required
                />
                <!-- Error -->
                <div class="help-block with-errors text-danger"></div>
              </div>

              <div class="form-group">
                <label for="servicePrice">Starting Price</label>
                <input
                  type="number"
                  name="price"
                  class="form-control"
                  id="servicePrice"
                  placeholder="Starting Price"
                  data-error="Mininum 1 digit necessary"
                  minlength="1"
                  required
                />
                <div class="help-block with-errors text-danger"></div>
              </div>
              <div class="form-group">
                <label for="serviceDescription">Description</label>
                <textarea
                  class="form-control"
                  name="description"
                  id="serviceDescription"
                  rows="6"
                  minlength="5"
                  maxlength="500"
                  data-error="Minimum 5 and Miximum 500 characters"
                  required
                ></textarea>
                <div class="help-block with-errors text-danger"></div>
              </div>

              <div id="dynamic_field">
                <div class="form-group">
                    <div class="form-row">
                        <label for="e_location" class="col-lg-3 col-sm-3  col-form-label">Highlights:</label>
                        <div class="col-lg-6 col-sm-6">
                            <input type="text" name="highlights" placeholder="highlights"
                                class="form-control" data-error="Minimum 1 highlight" required/>
                        </div>
                        <div class="col-lg-3 col-sm-3">
                            <button type="button" name="add" id="add"
                                class="btn btn-success form-control">ADD</button>
                        </div>
                        <div class="help-block with-errors text-danger"></div>

                    </div>
                </div>
            </div>
            

            
              <div class="form-group">
                <label for="servimage">Service Image</label>
                <input
                  type="file"
                  name="servimage"
                  class="form-control"
                  placeholder="Starting Price"
                  data-error="image must be selected"
                  accept="image/*"
                  required
                />
                <div class="help-block with-errors text-danger"></div>
              </div>
              <button type="submit" class="btn btn-primary mr-2 mt-3">
                Submit
              </button>
              <a class="btn btn-light mt-3" href="/vanrai-admin/services">Cancel</a>
            </form>
          </div>
        </div>
      </div>
