<%- include('../../partials/adminPartials/adminHeader')%>
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between flex-wrap">
          <div class="d-flex align-items-end flex-wrap">
            <div class="mr-md-3 mr-xl-5">
              <h2>Welcome back,</h2>
             
            </div>
            <div class="d-flex">
              <i class="mdi mdi-home text-muted hover-cursor"></i>
              <p class="text-muted mb-0 hover-cursor">
                &nbsp;/&nbsp;Dashboard&nbsp;/&nbsp;
              </p>
              <p class="text-primary mb-0 hover-cursor">
                Date / update
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 grid-margin">
        <% if(successMessage != null){ %>
          <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <strong class="text-center"><%= successMessage%></strong> 
            <a type="button" class="close"  aria-label="Close" href="/vanrai-admin/updateDate">
              <span aria-hidden="true">&times;</span>
            </a>
          </div>
        <% }%>
        
        <% if(errorMessage != null){ %>
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
          <strong class="text-center"><%= errorMessage %></strong> 
          <a type="button" class="close"  aria-label="Close" href="/vanrai-admin/updateDate">
            <span aria-hidden="true" >&times;</span>
          </a>
        </div>
        <% }%>
      </div>
      <% if(error != null ){%>
        <div class="col-lg-12 heading-section text-center  p-5">
          <h2 class="section-title m-5">Error <i class="fas fa-exclamation-triangle"></i></h2>
          <p class="text-danger">
           <%= error %>
          </p>
        </div>
        <% } else { %>

          <div class="col-12 grid-margin">
            <div class="card mx-5">
              <div class="card-body">
                <h4 class="card-title">Update  Date</h4>
                <form
                  class="forms-sample"
                  role="form"
                  data-toggle="validator"
                  id="dateUpdateForm"
                  method="post",
                  action="/vanrai-admin/updateDate/<%= date.id%>"
                >
                  <div class="form-group">
                    <label for="userName">Date</label>
                    <input
                      type="text"
                      class="form-control"
                      name="date"
                      id="date"
                      data-error="You must select date."
                      value="<%= date.date%>"
                      disabled
                      
                    />
                    <!-- Error -->
                    <div class="help-block with-errors text-danger"></div>
                  </div>
                  <div class="form-group">
                    <label for="userName">Package_name</label>
                    <input
                      type="text"
                      class="form-control"
                      name="date"
                      id="date"
                      data-error="You must select date."
                      value="<%= date.package_name%>"
                      disabled
                    />
                    <!-- Error -->
                    <div class="help-block with-errors text-danger"></div>
                  </div>
                  <div class="form-group">
                    <label for="total_seats">Total Seats  <%= date.total_seats == null ? "(You have not added total seats yet)"  :''%></label>
                    <input
                      type="number"
                      class="form-control"
                      name="total_seats"
                      id="total_seats"
                      value=<%= date.total_seats%> 
                    />
                    <div class="help-block with-errors text-danger"></div>
                  </div>
                  <div class="form-group">
                    <label for="available_seats">Available Seats   <%= date.available_seats == null ? "(You have not added total seats yet)"  :''%></label>
                    <input
                      type="number"
                      class="form-control"
                      name="available_seats"
                      id="available_seats" 
                      value=<%= date.available_seats%> 
                    />
                    <div class="help-block with-errors text-danger"></div>
                  </div>
                  
                  <button type="submit" class="btn btn-primary mr-2 mt-3">
                    Submit
                  </button>
                  <a class="btn btn-light mt-3" href="/vanrai-admin/dates">Cancel</a>
                </form>
              </div>
            </div>
          </div>
          <% } %>
 
    </div>
  </div>
  <!-- content-wrapper ends -->
  <!-- partial:partials/_footer.html -->
  <%- include('../../partials/adminPartials/adminFooter')%>

  <!-- partial -->
</div>
</div>
<!-- page-body-wrapper ends -->
</div>
<!-- plugins:js -->
<script src="/../js/jquery.min.js"></script>
<script src="/../vendors/base/vendor.bundle.base.js"></script>
<!-- endinject -->

<!-- End plugin js for this page-->
<!-- inject:js -->
<script src="/../js/admin/off-canvas.js"></script>
<script src="/../js/admin/hoverable-collapse.js"></script>
<script src="/../js/admin/template.js"></script>
<!-- endinject -->
<!-- Custom js for this page-->

<script src="/../js/admin/dataTables.bootstrap4.js"></script>

<script src="/../js/admin/drag-drop.js"></script>
