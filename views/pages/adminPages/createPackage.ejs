<!-- End custom js for this page-->
<script src="../js/validator.min.js"></script>

<script src="../js/date.js"></script>

<script>
 
 $(function () {
        $('#datepicker').datepicker({
          multidate:true,
          
        });
      });
  $(document).ready(function () {
            var i = 1;
            $('#add').click(function () {
                i++;
                $('#dynamic_field')
                    .append('<div id="row' + i + '"><div class="form-group"><div class="form-row"><div class="col-lg-9 col-sm-6"><input type="text" name="highlights" placeholder="highlights"class="form-control" /></div><div class="col-lg-3 col-sm-3"><button type="button" name="remove" id="' + i + '" class="btn btn-danger btn_remove form-control">Remove</button></div></div></div></div>');
            });
            $(document).on('click', '.btn_remove', function () {
                var button_id = $(this).attr("id");
                $('#row' + button_id + '').remove();
            });

  });
 
</script>
</body>
</html>
